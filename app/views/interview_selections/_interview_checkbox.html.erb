<div id="interview_selection_<%= application.id %>">
  <div class="interview-status-container">
    <!-- Visual indicator for interview status -->
    <% if application.selected_for_interview %>
      <i class="bi bi-check-circle-fill text-success" title="Selected for interview"></i>
    <% else %>
      <i class="bi bi-circle text-secondary" title="Not selected"></i>
    <% end %>
    
    <!-- Button controls -->
    <div>
      <%= button_to "Select", 
          update_interview_selection_interview_selection_path(application, selected: 1), 
          method: :patch,
          class: "btn btn-sm btn-outline-success #{application.selected_for_interview ? 'd-none' : ''}", 
          form: { data: { turbo: true } } %>
      
      <%= button_to "Deselect", 
          update_interview_selection_interview_selection_path(application, selected: 0), 
          method: :patch,
          class: "btn btn-sm btn-outline-secondary #{application.selected_for_interview ? '' : 'd-none'}", 
          form: { data: { turbo: true } } %>
    </div>
  </div>
</div>